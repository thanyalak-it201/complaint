@model Form;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "ComplaintPage";
}
<!DOCTYPE html>


<body>

    <div class="card mb-4">
        <h5 class="card-header">แบบรับข้อร้องเรียนจากลูกค้า</h5>
        <form method="post" class="card-body" asp-controller="Complaint" asp-action="Create">
            <h6>กรุณาเลือก</h6>
            <div class="btn-group rounded-pill" role="group" aria-label="Basic radio toggle button group">
                <input asp-for="TypeId" type="radio" class="btn-check" name="btnradio" id="btnradio1" checked />
                <label asp-for="TypeId" class="btn btn-outline-primary" for="btnradio1">เสนอแนะ</label>

                <input asp-for="TypeId" type="radio" class="btn-check" name="btnradio" id="btnradio2" />
                <label asp-for="TypeId" class="btn btn-outline-primary" for="btnradio2">Complaint</label>

                <input asp-for="TypeId" type="radio" class="btn-check" name="btnradio" id="btnradio3" />
                <label asp-for="TypeId" class="btn btn-outline-primary" for="btnradio3">Claim</label>
            </div>
            <hr class="my-4 mx-n4" />
            <h6>ขั้นตอนที่ 1</h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FromData" for="roundedInput" class="form-label">กรุณากรอกวันที่ยื่นเรื่อง</label>
                    <input asp-for="FromData" type="date" id="roundedInput" class="form-control rounded-pill" />
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="ToId" for="roundedInput" class="form-label">เรียน</label>
                        <input asp-for="ToId" type="text" id="roundedInput" class="form-control rounded-pill"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="CCId" for="roundedInput" class="form-label">สำเนาถึง</label>
                        <input asp-for="CCId" type="text" id="roundedInput" class="form-control rounded-pill"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="FromName" for="roundedInput" class="form-label">เรื่อง</label>
                        <input asp-for="FromName" type="text" id="roundedInput" class="form-control rounded-pill" placeholder="กรุณากรอกเรื่องที่ร้องเรียน" />
                    </div>
                </div>
            </div>
            <hr class="my-4 mx-n4" />
            <h6>ขั้นตอนที่ 2</h6>
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="CostomerId" for="roundedInput" class="form-label">รหัสลูกค้า</label>
                        <input asp-for="CostomerId" type="text" id="roundedInput" class="form-control rounded-pill" placeholder="กรุณากรอกรหัสลูกค้า" />
                    </div>
                </div>
                @* <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="CostomerName" for="roundedInput" class="form-label">ชื่อลูกค้า</label>
                        <input asp-for="CostomerName" type="text" id="roundedInput" class="form-control rounded-pill" />
                    </div>
                </div> *@
                @* <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="ProductId" for="roundedInput" class="form-label">รหัสสินค้า</label>
                        <input asp-for="ProductId" type="text" id="roundedInput" class="form-control rounded-pill"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="Product_name" for="roundedInput" class="form-label">ชื่อสินค้า</label>
                        <input asp-for="Product_name" type="text" id="roundedInput" class="form-control rounded-pill"/>
                    </div>
                </div> *@
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="Lot" for="roundedInput" class="form-label">กรุณากรอกวันที่ผลิตสินค้า</label>
                        <input asp-for="Lot" type="date" id="roundedInput" class="form-control rounded-pill" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="ProblemId" for="roundedInput" class="form-label">ปัญหาที่พบ</label>
                        <input asp-for="ProblemId" type="text" id="roundedInput" class="form-control rounded-pill" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="Number" for="roundedInput" class="form-label">จำนวน</label>
                        <input asp-for="Number" type="text" id="roundedInput" class="form-control rounded-pill" placeholder="กรุณากรอกจำนวนสินค้า" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="Price" for="roundedInput" class="form-label">มูลค่าความเสียหาย</label>
                        <input asp-for="Price" type="text" id="roundedInput" class="form-control rounded-pill" placeholder="มูลค่าความเสียหาย" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-2">
                        <label asp-for="Price" for="roundedInput" class="form-label">มูลค่าความเสียหาย</label>
                        <input asp-for="Price" type="text" id="roundedInput" class="form-control rounded-pill" placeholder="มูลค่าความเสียหาย" />
                    </div>
                </div>
            </div>
            <div class="pt-4">
                <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                <button type="reset" class="btn btn-label-secondary">Cancel</button>
            </div>
        </form>
    </div>

</body

@section Scripts {
    
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>

    <script>
        
        $(function () {
            $("#select-Ctm").change(function () {
                $.post("/Complaint/Customerselect",
                    { CostomerID: $(this).val() },
                    function (response) {
                        $("#txtCostomerName").val(response.)
                        $("#txtProductId").val(response.)
                        $("#txtProductName").val(response.)
                    }
                 );
            });
        });

    </script>
}



