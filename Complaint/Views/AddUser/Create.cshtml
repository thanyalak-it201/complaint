@model Complain.Models.User;

@{
    ViewData["Title"] = "Add User Page";
}
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('../img/adduser.png');
            background-size: cover;
            background-position: center center;
        }
    </style>

<div class="container">
    <div class="padding">
        <h2>Create Account</h2>
        <p></p>
    <form method="post" asp-controller="AddUser" asp-action="CreateF">
        <div class="col-md-6" >
        <div>
            <label asp-for="UserId" for="UserId" class="form-label">รหัสพนักงาน</label>
            <input asp-for="UserId" type="text" class="form-control rounded-pill" />
        </div>
                <br />
        <div>
            <label asp-for="UserName" for="UserName" class="form-label">ชื่อ-นามสกุล</label>
            <input asp-for="UserName" type="text" class="form-control rounded-pill" />
        </div>
                <br />
        <div class="row" >
        <div class="col-md-4 mb-auto">
            <label asp-for="EmpDepartment" for="EmpName" class="form-label">ฝ่าย</label>
            <select asp-for="EmpDepartment" asp-items="ViewBag.Department" class="select2 form-select rounded-pill">
                <option>เลือก</option>
            </select>
        </div>
        <div class="col-md-4 mb-auto">
            <label asp-for="EmpSection" for="EmpName" class="form-label">แผนก</label>
            <select asp-for="EmpSection" asp-items="ViewBag.Section" class="select2 form-select rounded-pill">
                <option>เลือก</option>
            </select>
        </div>
        <div class="col-md-4 mb-auto">
            <label asp-for="EmpPosition" for="EmpName" class="form-label">ตำแหน่ง</label>
            <select asp-for="EmpPosition" asp-items="ViewBag.Position" class="select2 form-select rounded-pill">
                <option>เลือก</option>
            </select>
        </div>
        
        </div>
                <br />
        <div>
            <label asp-for="Email" for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="Email" class="form-control rounded-pill" />
        </div>
                <br />
        <div>
            <label asp-for="Password" for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="Password" class="form-control rounded-pill" />
        </div>
                <br />
        <div class="col-md-4 mb-auto">
            <label asp-for="RoleId" for="RoleId" class="form-label">Role</label>
            <select asp-for="RoleId" asp-items="ViewBag.Role" class="select2 form-select rounded-pill">
                <option>เลือก</option>
            </select>
        </div>
        
        <br />
        <!-- Button trigger modal -->
            <center>
                <div class="pt-4">
                        <button type="button" class="btn btn-primary me-sm-3 me-1 rounded-pill" data-toggle="modal" data-target="#exampleModalCenter">
                        บันทึกข้อมูล
                    </button>
                </div>
            </center>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-cog" aria-hidden="true"></i>&nbsp;&nbsp;System</h5>
                        </div>
                        <div class="modal-body" style="text-align: center;">
                            คุณต้องการบันทึกข้อมูลใช่หรือไม่ โปรดกดปุ่มยืนยันค่ะ
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">ยกเลิก</button>
                            <button type="submit" value="Create" class="btn btn-success btn-sm">ยืนยัน</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </div>
</div>


@section Scripts {
    <!-- PupupBoostap -->
