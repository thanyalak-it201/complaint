@model Complain.Models.VUser;
@using SetCookie
@{
    ViewData["Title"] = "Index User Page";
}
@section Styles {
    <link rel="stylesheet" href="~/css/styles.css" />
}


<div class="container">
    <div class="padding">
        <div class="main">
            <div class="container">
                <div class="h2 font-weight-bold">บัญชีของฉัน</div>
                <br />
                <div class="row">
                    <div class="col-sm-3">
                        <div>
                            @if (User.GetLoggedInImgProfile() != "imgProfile.jpg")
                            {
                                <div class="profile-picture-container">
                                    <img src="~/@User.GetLoggedInImgProfile()" alt="Profile Picture" class="w-100 rounded-circle">
                                    <a data-toggle="modal" data-target="#UploadImge" class="edit-button" style="font-size: 35px;">
                                        <i class="fa fa-file-image-o" aria-hidden="true"></i>
                                        <ion-icon name="camera-outline"></ion-icon>
                                    </a>
                                    <!-- Modal -->
                                    <div class="modal fade" id="UploadImge" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-file-image-o" aria-hidden="true"></i>&nbsp;&nbsp;อัปโหลดรูปภาพโปรไฟล์</h5>
                                                </div>
                                                <form asp-action="UpdateProfile" asp-controller="User" enctype="multipart/form-data" method="POST">
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label for="example-text-input" class="form-control-label">เลือกรูปภาพ</label>
                                                            <input asp-for="ImgProfile" class="form-control" type="file">
                                                            <input asp-for="ImgProfile" class="form-control" type="hidden" value="@User.GetLoggedInUserId()">
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">ยกเลิก</button>
                                                        <button type="submit" class="btn btn-success btn-sm">ยืนยัน</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="profile-picture-container">
                                <img src="~/img/Profile/imgProfile.jpg" alt="profile_image" alt="profile_image" class="w-100 rounded-circle">
                                    <a data-toggle="modal" data-target="#UploadImge1" class="edit-button" style="font-size: 35px;">
                                        <i class="fa fa-file-image-o" aria-hidden="true"></i>
                                        <ion-icon name="camera-outline"></ion-icon>
                                    </a>
                                    <!-- Modal -->
                                    <div class="modal fade" id="UploadImge1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle"><i class="fa fa-file-image-o" aria-hidden="true"></i>&nbsp;&nbsp;อัปโหลดรูปภาพโปรไฟล์</h5>
                                                </div>
                                                <form asp-action="UpdateProfile" asp-controller="User" enctype="multipart/form-data" method="POST">
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label for="example-text-input" class="form-control-label">เลือกรูปภาพ</label>
                                                            <input asp-for="ImgProfile" class="form-control" type="file">
                                                            <input asp-for="ImgProfile" class="form-control" type="hidden" value="@User.GetLoggedInUserId()">
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">ยกเลิก</button>
                                                        <button type="submit" class="btn btn-success btn-sm">ยืนยัน</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>

                        </div>
                    <div class="col">
                        @{
                            Complain.Models.VUser item = ViewBag.ListUserProfile;
                        }
                        <div class="col-10">
                            <div class="form-group row">
                                <div class="col-2 align-self-center">
                                    <label class="fs-5">ชื่อผู้ใช้งาน</label>
                                </div>
                                <div class="col align-self-center">
                                    <input class="form-control rounded-pill" type="text" value="@item.UserName" disabled>
                                </div>
                            </div>
                        </div>
                        <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-5">รหัสพนักงาน</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input class="form-control rounded-pill" type="text" value="@item.UserId" disabled>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-5">ตำแหน่ง</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input class="form-control rounded-pill" type="text" value="@item.PositionName" disabled>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-5">แผนกงาน</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input class="form-control rounded-pill" type="text" value="@item.SectionName" disabled>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-5">ฝ่าย</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input class="form-control rounded-pill" type="text" value="@item.DepartmentName" disabled>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <!-- PupupBoostap -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
}
