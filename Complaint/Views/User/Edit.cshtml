@model Complain.Models.VUser;
@using SetCookie
@{
    ViewData["Title"] = "Edit User Page";
}

<title>บัญชีของฉัน</title>
<link rel="stylesheet" href="~/css/styles.css" />

<div class="container">
    <div class="padding">
        <div class="main">
            <div class="container">
                <div class="h2 font-weight-bold">บัญชีของฉัน</div>
                <br />
                <form method="post" asp-controller="User" asp-action="Update" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col">
                            @{
                                Complain.Models.VUser item = ViewBag.UserProfile;
                            }
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label asp-for="UserName" for="UserName" class="fs-5 form-label">ชื่อผู้ใช้งาน</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input asp-for="UserName" type="text" class="form-control rounded-pill" value="@item.UserName" />
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label asp-for="UserId" for="UserId" class="fs-5 form-label">รหัสพนักงาน</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input asp-for="UserId" type="text" class="form-control rounded-pill" value="@item.UserId" />
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-6">ตำแหน่ง</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <select asp-for="EmpPosition" asp-items="ViewBag.Position" class="select2 form-select rounded-pill" id="RoleIdSelect">
                                            <option>@item.PositionName</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-6">แผนกงาน</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <select asp-for="EmpSection" asp-items="ViewBag.Section" class="select2 form-select rounded-pill" id="RoleIdSelect">
                                            <option>@item.SectionName</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-6">ฝ่าย</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <select asp-for="EmpDepartment" asp-items="ViewBag.Department" class="select2 form-select rounded-pill" id="RoleIdSelect">
                                            <option>@item.DepartmentName</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="col-10">
                                <div class="form-group row">
                                    <div class="col-2 align-self-center">
                                        <label class="fs-6">อัปโหลดรูปภาพโปรไฟล์</label>
                                    </div>
                                    <div class="col align-self-center">
                                        <input asp-for="ImgProfile" type="file" class="form-control rounded-pill" value="@item.ImgProfile" />
                                    </div>
                                </div>
                            </div>
                            <br />
                            <button asp-controller="User" asp-action="Index" class="btn btn-danger"> ยกเลิก </button>
                            <button type="submit" class="btn btn-success"> แก้ไขข้อมูล </button>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>

 @section Scripts {
 <!-- PupupBoostap -->
 <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
 <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
}
